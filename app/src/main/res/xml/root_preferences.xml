<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/settings_category_ui">

        <ListPreference
            app:defaultValue="system"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:key="theme_preference"
            app:title="@string/setting_theme_title"
            app:icon="@drawable/icon_preference_theme" />

        <ListPreference
            app:defaultValue="system"
            app:entries="@array/language_entries"
            app:entryValues="@array/language_values"
            app:key="language_preference"
            app:title="@string/setting_language_title"
            app:icon="@drawable/icon_preference_language" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/settings_category_account">

        <Preference
            app:key="logout_preference"
            app:title="@string/logout"
            app:icon="@drawable/icon_logout" />

        <Preference
            app:key="delete_account"
            app:title="@string/delete_account"
            app:icon="@drawable/icon_delete" />

    </PreferenceCategory>

    <PreferenceCategory app:title="@string/setting_backup_category">

        <Preference
            app:key="create_backup"
            app:title="@string/backup_categories"
            app:icon="@drawable/icon_preference_backup" />

        <Preference
            app:key="import_backup"
            app:title="@string/backup_import_categories"
            app:icon="@drawable/icon_preference_backup_import" />

        <!--
                <SwitchPreferenceCompat
                    app:key="sync"
                    app:title="@string/sync_title" />

                <SwitchPreferenceCompat
                    app:dependency="sync"
                    app:key="attachment"
                    app:summaryOff="@string/attachment_summary_off"
                    app:summaryOn="@string/attachment_summary_on"
                    app:title="@string/attachment_title" />
        -->
    </PreferenceCategory>

</PreferenceScreen>