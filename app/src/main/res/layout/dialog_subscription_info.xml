<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingHorizontal="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_subscription_info_channel_thumbnail_container"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:cardCornerRadius="10dp">

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/dialog_subscription_info_channel_thumbnail"
            android:contentDescription="@string/thumbnail_img_placeholder" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_subscription_info_channel_name"
        android:textSize="18sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/dialog_subscription_info_channel_thumbnail_container" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dialog_subscription_info_sub_since"
        android:paddingTop="10dp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintTop_toBottomOf="@id/dialog_subscription_info_channel_name"
        app:layout_constraintStart_toEndOf="@id/dialog_subscription_info_channel_thumbnail_container" />

</androidx.constraintlayout.widget.ConstraintLayout>