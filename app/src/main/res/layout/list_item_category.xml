<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="@dimen/category_icon_preview"
        android:layout_height="@dimen/category_icon_preview"
        android:id="@+id/list_item_category_icon"
        android:contentDescription="@string/category_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/list_item_category_name"
        android:textSize="18sp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:layout_constraintStart_toEndOf="@+id/list_item_category_icon"
        app:layout_constraintTop_toTopOf="@+id/list_item_category_icon"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_category_icon" />

    <Button
        style="?attr/materialIconButtonStyle"
        android:id="@+id/list_item_category_dots_menu"
        android:layout_width="@dimen/category_icon_preview"
        android:layout_height="@dimen/category_icon_preview"
        app:icon="@drawable/icon_dots_menu"
        android:contentDescription="@string/options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/list_item_category_icon"
        app:layout_constraintBottom_toBottomOf="@+id/list_item_category_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>